<h2>Todo page</h2>

{{#if todos.length}}
<ul>


  {{#each todos}}
    <li class="todo">
      <label>
        {{#if completed}}
        <input type="checkbox" checked>
        <span class="completed">{{title}}</span>

        <button class="btn btn-small">Save</button>
        {{else}}
        <input type="checkbox">
        <span>{{title}}</span>

        <button class="btn btn-small">Save</button>
        {{/if}}

      </label>
    </li>
  {{/each}}
</ul>
{{else}}
<p>No todos!</p>
{{/if}}
